<div>
  <%= form_tag courses_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "Search for a course here (e.g., a title like MATLAB or description like plotting or source like Mathworks)" %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</div>
